<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoApp.MeteoItemPage">
    <StackLayout x:Name="MainLayout" Spacing="30">
        
            <Label Text="{Binding City.Name}"
                FontSize="55"
                HorizontalOptions="Center" 
                VerticalOptions="Start" />
        <Label Text="{Binding City.WeatherData._Weather[0].Description}"
               FontSize="35"
                HorizontalOptions="Center" 
                VerticalOptions="Start" />
        <Label Text="{Binding City.WeatherData._Main.TempCelsius, StringFormat='Temperature {0} °C'}"
               FontSize="35"
                 HorizontalOptions="Center" 
                 VerticalOptions="Start" />
        <Label Text="{Binding City.WeatherData._Main.TempMinCelsius, StringFormat='Min {0} °C'}"
               FontSize="35"
                 HorizontalOptions="Center" 
                 VerticalOptions="Start" />
        <Label Text="{Binding City.WeatherData._Main.TempMaxCelsius, StringFormat='Max {0} °C'}"
               FontSize="35"
                 HorizontalOptions="Center" 
                 VerticalOptions="Start" />
        <Image Source="{Binding City.WeatherData.WeatherIcon}" Aspect="AspectFill"></Image>
 

    </StackLayout>
</ContentPage>

